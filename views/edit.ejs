<% include ./partials/header %>

<div id="createCampgroundForm">
    <h1>Edit <%= campground.name %></h1>
    <form action="/campgrounds/<%= campground.id %>" method="POST">
        <div class="form-group">
            <label for="campgroundName">Campground name</label>
            <input id="campgroundName" class="form-control" type="text" name="campground[name]" placeholder="<%= campground.name %>">
        </div>
        <div class="form-group">
            <label for="campgroundImage">Campground image</label>
            <input id="campgroundImage" class="form-control" type="text" name="campground[image]" placeholder="<%= campground.image %>">
        </div>
        <div class="form-group form-check">
            <label for="campgroundInfo">Campground info</label>
            <input id="campgroundInfo" class="form-control" type="text" name="campground[info]" placeholder="<%= campground.info %>">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

<% include ./partials/footer %>